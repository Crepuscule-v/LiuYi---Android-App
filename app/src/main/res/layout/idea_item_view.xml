<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/idea_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="20dp"
    card:cardCornerRadius="4dp"
    card:cardElevation="10dp"
    card:cardMaxElevation="10dp" >

    <androidx.constraintlayout.utils.widget.ImageFilterButton
        android:id="@+id/delete_idea_entry_btn"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_gravity="right"
        android:background="@drawable/delete_idea_btn"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp">

        <TextView
            android:id="@+id/tv_idea_item_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:layout_marginHorizontal="10dp"
            android:text="idea">
        </TextView>

        <ImageView
            android:id="@+id/iv_idea_item_image"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" >
        </ImageView>

        <TextView
            android:id="@+id/tv_idea_item_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:textStyle="bold"
            android:layout_marginHorizontal="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="16sp"
            android:text="date"
            android:textColor="#A9A9A9">
        </TextView>
    </LinearLayout>

</androidx.cardview.widget.CardView>


